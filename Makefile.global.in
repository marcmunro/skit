#location substitutions

PACKAGE_NAME=		FULL-PACKAGE-NAME
VERSION=		VERSION

#build tools
CC=			gcc

#build tool flags
#CFLAGS=			-g -O2
# Turn off optimisation as it makes gdb harder to use
CFLAGS=			-g 

override CPPFLAGS := @GLIB_CFLAGS@ \
	 @PQINCPATH@ @XML_CFLAGS@ \
	 @XSLT_CFLAGS@ $(CPPFLAGS) 

override LDFLAGS := @GLIB_LIBS@ @PQLIB@ @XML_LIBS@ \
	 @XSLT_LIBS@ $(LDFLAGS)

LIBCHECK = @CHECK_LIBS@

ifeq ($(GCC), yes)
	CFLAGS += -Wall -Wmissing-prototypes -Wmissing-declarations
endif

