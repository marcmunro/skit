<skit:stylesheet
  xmlns:skit="http://www.bloodnok.com/xml/skit">
  
  <skit:options>
    <option name='sources' value='1'/>
    <option name='grants' type='flag'/>
    <alias value='g' for='grants'/>
    <option name='details' type='flag'/>
    <alias value='d' for='details'/>
    <alias value='full' for='details'/>
    <alias value='fulldetails' for='details'/>
    <alias value='f' for='details'/>
  </skit:options>

  <skit:result>
    <skit:xslproc stylesheet="list.xsl">
      <list>
	<skit:attribute id="fulldetails" input="expr" 
			expr="tuple['options']['details'].to_s"/>
	<skit:attribute id="withgrants" input="expr" 
			expr="tuple['options']['grants'].to_s"/>
	<skit:doc input="pop"/>
      </list>	
    </skit:xslproc>
  </skit:result>
</skit:stylesheet>


