<?xml version="1.0" encoding="UTF-8"?>
<!--

  Test file for checking the skit:include directive.
  It will also allow for checking of skit:options and for add_deps
  functionality as this is functionally equivalent to add_deps.xml

-->

<skit:stylesheet
  xmlns:skit="http://www.bloodnok.com/xml/skit"
  xmlns:xi="http://www.w3.org/2003/XInclude">
  
  <skit:options>
    <option name='sources' value='1'/>
    <option name='gra*nts' default='false' type='flag'/>
    <alias value='g' for='grants'/>
    <option name='d*etails' type='flag'/>
    <alias value='full*details' for='details'/>
    <alias value='f' for='details'/>
  </skit:options>

  <xi:include href="skitfile:inclusion.xml"/>

</skit:stylesheet>

